#main-page
  display:flex
  flex-direction: column
  align-items:center
  justify-content: center
  height: 100%;
  overflow: hidden
  a
    text-decoration: none
    color: black
  a:visited
    color: black
  a:hover
    color: gray 
  &:after
    content: ""  
    background-image: url('../image/bgi.jpg')
    background-position: center center
    background-size: cover
    top: 0
    left: 0
    bottom: 0
    right: 0
    position: absolute
    z-index: -1
    opacity: 0.7

#mega-title,#index-menu,.main-socialmedia,#bottom
  text-align: center

#mega-title,#index-menu,.main-socialmedia
  flex:1
  
#mega-title
  margin-top:150px;
  line-height: 5em
  h1
    font-size: 5em
    font-family: 'Amatic SC', cursive
  p
    font-size: 1.25em
    font-family: 'Lato', sans-serif

#index-menu
  a
    margin: 0 10px;
    font-family: 'Lato', sans-serif

#bottom
  box-sizing: border-box
  height:24px
  line-height:24px
  font-family: 'Lato', sans-serif
